{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Django: Runserver",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/manage.py",
      "args": ["runserver"],
      "django": true,
      "justMyCode": true
    },
    {
      "name": "Django: Shell",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/manage.py",
      "args": ["shell"],
      "django": true,
      "justMyCode": true
    },
    {
      "name": "Django: Test",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/manage.py",
      "args": ["test"],
      "django": true,
      "justMyCode": true
    },
    {
      "name": "Python: Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Celery Worker",
      "type": "debugpy",
      "request": "launch",
      "module": "celery",
      "args": ["-A", "config", "worker", "--loglevel=info"],
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Celery Beat",
      "type": "debugpy",
      "request": "launch",
      "module": "celery",
      "args": ["-A", "config", "beat", "--loglevel=info"],
      "console": "integratedTerminal",
      "justMyCode": true
    }
  ]
}
